@page "{*_}"
@using Microsoft.AspNetCore.Authorization;
@using Moryx.ControlSystem.ProcessEngine.Web.Properties
@using System.ComponentModel.DataAnnotations
@using Moryx.ControlSystem.Processes.Endpoints;
@using Moryx.Modules
@{
  ViewData["Title"] = "Processes";
  ViewData["BaseRef"] = "Processes";

  Layout = "_Layout";
}
@attribute [WebModule("Processes", "ballot", Category = ModuleCategory.Diagnostics),
  Display(ResourceType = typeof(Strings), Name = "Module_Title", Description = "Module_Description"),
    Authorize(Policy = ProcessPermissions.CanView),
    AllowAnonymous]
@section Styles {
  <link rel="stylesheet" href="/_content/Moryx.ControlSystem.ProcessEngine.Web/styles.css">
}
@section Scripts
{
  <script src="/_content/Moryx.ControlSystem.ProcessEngine.Web/polyfills.js" type="module"></script>
  <script src="/_content/Moryx.ControlSystem.ProcessEngine.Web/main.js" type="module"></script>
}

<app-root></app-root>
