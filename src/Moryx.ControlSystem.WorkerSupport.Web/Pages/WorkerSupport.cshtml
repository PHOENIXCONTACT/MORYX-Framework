@page
@using Microsoft.AspNetCore.Authorization;
@using Moryx.Asp.Integration
@using System.ComponentModel.DataAnnotations
@using Moryx.ControlSystem.VisualInstructions.Endpoints;
@using Moryx.ControlSystem.WorkerSupport.Web.Properties
@{
  ViewData["Title"] = "Worker Support";
  ViewData["BaseRef"] = "WorkerSupport";

  Layout = "_Layout";
}
@attribute [WebModule("WorkerSupport", "assignment"), 
ModuleEventStream("/api/moryx/instructions/stream"),
  Display(ResourceType = typeof(Strings), Name = "Module_Title", Description = "Module_Description"),
    Authorize(Policy = VisualInstructionPermissions.CanView),
    AllowAnonymous]
@section Styles {
  <link rel="stylesheet" href="/_content/Moryx.ControlSystem.WorkerSupport.Web/styles.css">
}
@section Scripts
{
  <script src="/_content/Moryx.ControlSystem.WorkerSupport.Web/runtime.js" type="module"></script>
  <script src="/_content/Moryx.ControlSystem.WorkerSupport.Web/polyfills.js" type="module"></script>
  <script src="/_content/Moryx.ControlSystem.WorkerSupport.Web/main.js" type="module"></script>
}

<app-root></app-root>
