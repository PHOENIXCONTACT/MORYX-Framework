@page
@using Microsoft.AspNetCore.Authorization;
@using System.ComponentModel.DataAnnotations
@using Moryx.Modules
@using Moryx.VisualInstructions.Web.Properties
@using Moryx.VisualInstructions.Endpoints
@{
  ViewData["Title"] = "Instructions";
  ViewData["BaseRef"] = "VisualInstructions";

  Layout = "_Layout";
}
@attribute [WebModule("VisualInstructions", "assignment"),
ModuleEventStream("/api/moryx/instructions/stream"),
  Display(ResourceType = typeof(Strings), Name = "Module_Title", Description = "Module_Description"),
    Authorize(Policy = VisualInstructionsPermissions.CanView),
    AllowAnonymous]
@section Styles {
  <link rel="stylesheet" href="/_content/Moryx.VisualInstructions.Web/styles.css">
}
@section Scripts
{
  <script src="/_content/Moryx.VisualInstructions.Web/polyfills.js" type="module"></script>
  <script src="/_content/Moryx.VisualInstructions.Web/main.js" type="module"></script>
}

<app-root></app-root>
