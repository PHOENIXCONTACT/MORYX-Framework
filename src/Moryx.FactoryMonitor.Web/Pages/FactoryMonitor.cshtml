@page "{*_}"
@using Microsoft.AspNetCore.Authorization;
@using System.ComponentModel.DataAnnotations
@using Moryx.FactoryMonitor.Endpoints;
@using Moryx.FactoryMonitor.Web.Properties
@using Moryx.Modules

@{
    ViewData["Title"] = "Factory Monitor";
    ViewData["BaseRef"] = "FactoryMonitor";

    Layout = "_Layout";
}

@attribute [WebModule("FactoryMonitor", "monitor"),
Display(ResourceType = typeof(Strings), Name = "Module_Title", Description = "Module_Description"),
Authorize( Policy = FactoryMonitorPermissions.CanView),
AllowAnonymous]

@section Styles {
    <link rel="stylesheet" href="/_content/Moryx.FactoryMonitor.Web/styles.css">
}
@section Scripts
    {
    <script src="/_content/Moryx.FactoryMonitor.Web/polyfills.js" type="module"></script>
    <script src="/_content/Moryx.FactoryMonitor.Web/main.js" type="module"></script>
}

<app-root></app-root>

