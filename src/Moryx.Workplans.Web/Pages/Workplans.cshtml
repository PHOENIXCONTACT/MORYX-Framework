@page "{*_}"
@using Microsoft.AspNetCore.Authorization;
@using Moryx.AbstractionLayer.Products.Endpoints;
@using Moryx.Asp.Integration
@using System.ComponentModel.DataAnnotations
@using Moryx.Workplans.Web.Properties
@{
  ViewData["Title"] = Strings.Module_Title;
  ViewData["BaseRef"] = "Workplans";

  Layout = "_Layout";
}
@attribute [WebModule("Workplans", "mediation"),
  Display(ResourceType = typeof(Strings), Name = "Module_Title", Description = "Module_Description"),
  Authorize(Policy = WorkplanPermissions.CanView),
  AllowAnonymous]
@section Styles {
  <link rel="stylesheet" href="/_content/Moryx.Workplans.Web/styles.css">
}
@section Scripts
{
  <script src="/_content/Moryx.Workplans.Web/runtime.js" type="module"></script>
  <script src="/_content/Moryx.Workplans.Web/polyfills.js" type="module"></script>
  <script src="/_content/Moryx.Workplans.Web/main.js" type="module"></script>
}

<app-root></app-root>
