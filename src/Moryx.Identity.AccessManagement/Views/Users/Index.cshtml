@model IEnumerable<Moryx.Identity.AccessManagement.Data.MoryxUser>
@{
    ViewData["Title"] = "Users";
}

<table class="table table-striped table-bordered tw-mt-2" id="userTable">
    <thead>
        <tr>
            <th>User</th>
            <th>Email</th>
            <th class="tw-w-[10%]">
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    <div class="tw-grid tw-grid-cols-1">
                        <div>
                            <a>
                                @user.UserName
                            </a>
                            <br>
                            <small>
                                @user.Firstname @user.LastName: @user.LastSignIn
                            </small>
                            <br>
                            <small>
                                @user.Id
                            </small>
                        </div>
                    </div>
                </td>
                <td>
                    <a>
                        @user.Email
                    </a>
                </td>
                <td>
                    <div class="dropdown">
                        <button type="button" class="btn-light dropdown-toggle" data-dropdown-toggle aria-haspopup="true" aria-expanded="false">
                            Action
                        </button>
                        <div class="dropdown-menu shadow">
                            <a style='margin-right:16px' asp-controller="Users" asp-action="Edit" asp-route-userId="@user.Id" class="dropdown-item">
                                <i class="fa fa-pencil"></i> Edit
                            </a>
                            <a style='margin-right: 16px' asp-controller="UserRoles" asp-action="Index" asp-route-userId="@user.Id" class="dropdown-item">
                                <i class="fa fa-wrench"></i> Manage Roles
                            </a>
                            @if (User.Identity.Name != user.UserName)
                            {
                                <a style='margin-right: 16px' asp-controller="Users" asp-action="Delete" asp-route-userId="@user.Id" class="dropdown-item">
                                    <i class="fa fa-trash"></i> Delete
                                </a>
                            }
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>