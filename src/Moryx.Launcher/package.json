{
  "name": "moryx.launcher",
  "version": "1.0.0",
  "description": "moryx launcher, host for micro-frontends",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng version && ng build",
    "build:css": "npx tailwindcss -i ./wwwroot/css/app.css -o ./wwwroot/css/app.min.css --minify",
    "build:prod": "ng build --delete-output-path --configuration production --progress false",
    "copy:componentsfiles": "copyfiles -u 1 components/dist/*.js wwwroot/js",
    "watch": "npx tailwindcss -i ./wwwroot/css/app.css -o ./wwwroot/css/app.min.css --minify --watch"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/cdk": "^18.2.3",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/elements": "^18.2.3",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "autoprefixer": "^10.4.20",
    "css-loader": "^7.1.2",
    "lit": "^3.2.0",
    "postcss": "^8.4.45",
    "postcss-cli": "^11.0.0",
    "rxjs": "~7.8.0",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.10",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.3",
    "@angular/cli": "^18.2.3",
    "@angular/compiler-cli": "^18.2.0",
    "@types/jasmine": "~5.1.0",
    "autoprefixer": "^10.4.20",
    "copyfiles": "^2.4.1",
    "eslint": "^9.9.1",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.4.47",
    "sass": "^1.77.8",
    "sass-loader": "^16.0.0",
    "typescript": "~5.5.2",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  }
}
