<Project Sdk="Microsoft.NET.Sdk.Razor" InitialTargets="BuildUI">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <IsPackable>true</IsPackable>
    <Deterministic>true</Deterministic>
    <DeterministicSourcePaths>true</DeterministicSourcePaths>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Moryx\Moryx.csproj"/>
    <ProjectReference Include="..\Moryx.Identity\Moryx.Identity.csproj"/>
  </ItemGroup>

  <ItemGroup>
    <None Include="wwwroot\**\*">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Properties\Strings.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Strings.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Properties\Strings.resx">
      <Generator>PublicResXFileCodeGenerator</Generator>
      <LastGenOutput>Strings.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <SourceRoot Include="$(MSBuildProjectDirectory)/"/>
  </ItemGroup>

  <Import Project="..\..\.build\WebProjects.props"/>
  <Target Name="BuildUI" Condition="('$(Configuration)'!='Debug' Or !Exists('wwwroot\js\dist\main.js')) And ('$(NoBuild)' != 'true') ">
    <Exec WorkingDirectory=".\app\" Command="npm config set strict-ssl false" />
    <Exec WorkingDirectory=".\app\" Command="npm ci" />
    <Exec WorkingDirectory=".\app\" Command="npm run build:css"/>
    <Exec WorkingDirectory=".\app\" Command="npm run copy:componentsfiles"/>
    <Exec WorkingDirectory=".\app\" Command="npm config set strict-ssl true" />
  </Target>
</Project>
