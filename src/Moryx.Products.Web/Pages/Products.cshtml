@page "{*_}"
@using Microsoft.AspNetCore.Authorization;
@using Moryx.AbstractionLayer.Products.Endpoints;
@using System.ComponentModel.DataAnnotations
@using Moryx.Modules
@using Moryx.Products.Web.Properties
@{
  ViewData["Title"] = "Products";
  ViewData["BaseRef"] = "Products";

  Layout = "_Layout";
}
@attribute [WebModule("Products", "inventory"),
  Display(ResourceType = typeof(Strings), Name = "Module_Title", Description = "Module_Description"),
  Authorize(Policy = ProductPermissions.CanViewTypes),
  AllowAnonymous]
@section Styles {
  <link rel="stylesheet" href="/_content/Moryx.Products.Web/styles.css">
}
@section Scripts
{
  <script src="/_content/Moryx.Products.Web/runtime.js" type="module"></script>
  <script src="/_content/Moryx.Products.Web/polyfills.js" type="module"></script>
  <script src="/_content/Moryx.Products.Web/main.js" type="module"></script>
}

<app-root></app-root>
