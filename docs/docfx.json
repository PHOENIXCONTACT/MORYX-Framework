{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "/**/*.csproj"
          ],
          "exclude": [
            "**/obj/**",
            "**/bin/**",
            ".build/**",
            "/**/*Tests.csproj",
            "/**/*Samples.csproj"
          ],
          "src": "../"
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      },
      {
        "files": [
          "manual/**.md",
          "manual/**/toc.yml"
        ]
      },
      {
        "files": [
          "migrations/**.md",
          "migrations/**/toc.yml"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**",
          "**/resources/**"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": ["default"],
    "postProcessors": ["ExtractSearchIndex"],
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "globalMetadata": {
      "_appTitle": "ControlSystem",
      "_appFooter": "PHOENIXCONTACT - Corporate Technology & Value Chain",
      "_appLogoPath": "resources/Phoenix_Contact_Logo.svg",
      "_enableNewTab": true,
      "_enableSearch": true      
    },
    "xrefService": ["https://xref.docs.microsoft.com/query?uid={uid}"]
  }
}